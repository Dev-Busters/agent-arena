{
  "name": "agent-arena",
  "version": "1.0.0",
  "description": "An MMORPG-style platform where AI agents battle, level up, equip gear, and compete on leaderboards.",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.bundle.js",
    "blogs": "tsc ls -R dist",
    "compile": "tsc --outDir dist",
    "bundle": "esbuild src/server.ts --bundle --platform=node --target=node20 --outfile=dist/server.bundle.js --format=esm --packages=external",
    "start:tsx": "tsx src/server.ts",
    "start:dev": "tsx src/server.ts",
    "migrate": "tsx src/database/migrate.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "game",
    "mmorpg",
    "ai-agents",
    "multiplayer",
    "battles"
  ],
  "author": "Buster & HarroweD",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "rot-js": "^2.2.1",
    "seedrandom": "^3.0.5",
    "three": "^0.160.0",
    "dijkstrajs": "^1.0.1",
    "simplex-noise": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@types/three": "^0.160.0",
    "@types/seedrandom": "^3.0.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "esbuild": "^0.20.0",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "prettier": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dev-Busters/agent-arena.git"
  },
  "bugs": {
    "url": "https://github.com/Dev-Busters/agent-arena/issues"
  },
  "homepage": "https://github.com/Dev-Busters/agent-arena#readme"
}
